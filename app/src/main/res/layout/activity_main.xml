<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/BEIGE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Compass"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/GREEN"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:id="@+id/compassBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="41dp"/>
    <Button
            android:text="map"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/GREEN"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:id="@+id/mapBtn" android:layout_marginLeft="39dp" android:layout_marginStart="39dp"
            app:layout_constraintStart_toEndOf="@+id/compassBtn" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="41dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <Button
            android:text="send emergency sms"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/RED"
            android:layout_width="300dp"
            android:layout_height="125dp"
            android:id="@+id/smsBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/compassBtn"
    />
    <Button
            android:text="Set Emergency Contact"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/GREEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settingsBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="103dp" android:layout_marginStart="103dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="104dp"
            android:layout_marginRight="104dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/numberText"
            android:hint="Number" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/settingsBtn"
    />
    <Button
            android:text="Make emergency call"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/RED"
            android:layout_width="300dp"
            android:layout_height="125dp"
            android:id="@+id/callBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/smsBtn"/>
    <TextView
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/contactText" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/numberText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="103dp" android:layout_marginStart="103dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/callBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>