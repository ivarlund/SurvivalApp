<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CompassActivity">

    <ImageView
            android:layout_width="188dp"
            android:layout_height="185dp" app:srcCompat="@mipmap/compass_round"
            android:id="@+id/compass"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="273dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="111dp"
            android:layout_marginStart="111dp" android:layout_marginTop="273dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="112dp" android:layout_marginRight="112dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="45dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/bearing" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="106dp"
            app:layout_constraintBottom_toTopOf="@+id/compass"
    />
    <TextView
            android:text="BEARING"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/heading"
            app:layout_constraintBottom_toTopOf="@+id/bearing" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="77dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>